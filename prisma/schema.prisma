generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
  password  String
  updatedAt DateTime @updatedAt
}

model Visitor {
  id        Int      @id @default(autoincrement())
  name      String
  company   String?
  purpose   String?
  createdAt DateTime @default(now())
}

model Driver {
  id        Int      @id @default(autoincrement())
  name      String
  vehicle   String?
  licenseNo String?
  company   String?
  createdAt DateTime @default(now())
}
